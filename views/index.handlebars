<div class="container">
  <img src="assets/img/cheeseburger_vector.png" alt="burger">
  <h1>Eat-Da-Burgerz!</h1>
  <div class="row">
    <div class="col-lg-6">
      <h2>Ready to Eat</h2>
      <ul>
        {{#each burgers}}
        {{#unless devoured}}
        <li>
          {{burger_name}}
          <button class="devour btn" data-id="{{id}}">DEVOUR!!</button>
        </li>
        {{/unless}}
        {{/each}}
      </ul>
    </div>
    <div class="col-lg-6">
      <h2>Already DEVOURED!</h2>
      <ul>
        {{#each burgers}}
        {{#if devoured}}
        <li>
          {{burger_name}}
          <button class="delete btn" data-id="{{id}}">Delete</button>
        </li>
        {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>
  <h2>What kind of burger would you like to eat next?</h2>
  <div class="col-lg-12">
  <form class="create-form">
    <div class="form-group">
      <input class="form-control" type="text" id="burger" name="burger">
    </div>
    <button class="btn" type="submit">Submit</button>
  </form>
  </div>
</div>